
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>DangThawngs | Giỏ hàng</title>




<div ng-controller="CartCtrl">
    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Sản phẩm</th>
                                    <th>Giá</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>
                                    <th>Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="item in listSPGH">
                                    <td class="shoping__cart__item">
                                        <div style="width: 150px; float:left; margin-right: 25px;">
                                            <img src="{{item.Anh}}" alt="">
                                        </div>
                                        <div style="width: 422px; float:left; margin-top: 62px;">
                                            <h1 style="font-size:16px">{{item.TenSP}}</h1>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__price">
                                        {{item.Gia | currency : 'VND' : 0}}
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <button ng-click="Giam(item)">-</button>
                                        <span>{{item.quantity}}</span>
                                        <button ng-click="Tang(item)">+</button>
                                    </td>
                                    <td class="shoping__cart__total">
                                        {{item.quantity * item.Gia | currency : 'VND' : 0}}
                                    </td>
                                    <td class="shoping__cart__item__close xoa">
                                        <span class="fa fa-trash-o" ng-click="Xoa(item)"></span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/Home/Index" class="primary-btn cart-btn"><button style="width: 150px; height: 50px ;background-color:#7FAD39; font-size: 15px">Tiếp tục mua sắm</button></a>
                        <a href="" class="primary-btn cart-btn cart-btn-right" ng-click="XoaCart()">
                            <button style="width:150px;height:50px;margin-top:-13px; background-color:#7FAD39;font-size:15px"> Xóa giỏ hàng</button></a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Mã giảm giá</h5>
                            <form action="#">
                                <input type="text" placeholder="Nhập mã giảm giá của bạn">
                                <button type="submit" class="site-btn">Áp dụng</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Tổng giỏ hàng</h5>
                        <ul>
                            <li>Tổng <span>{{total | currency : 'VND' : 0}}</span></li>
                        </ul>
                        <a href="/Shopping/pay" class="primary-btn"><button style="width: 700px; height: 50px; background-color: #7FAD39; font-size: 20px; color: #fff ">TIẾN HÀNH THANH TOÁN</button></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->
</div>
